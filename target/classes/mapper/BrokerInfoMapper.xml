<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kpl.springboot.dao.BrokerInfoMapper">
    <resultMap id="BaseResultMap" type="com.kpl.springboot.entity.BrokerInfo" >
        <id column="id" property="id" jdbcType="INTEGER" />
         <result column="brokername" property="brokername" jdbcType="VARCHAR" />
		<result column="factoryid" property="factoryid" jdbcType="INTEGER" />
		 <result column="factoryname" property="factoryname" jdbcType="VARCHAR" />
    </resultMap>
    <!-- 模糊查询 倒序 -->
    <select id="selectbrokerinfo" resultMap="BaseResultMap" >
        select * from brokerinfo order by id desc
    </select>
    
     <select id="findBrokerListByLike" resultMap="BaseResultMap" >
        select * from brokerinfo
        <where>
            <if test="_parameter != null and _parameter != ''">
               and `brokername` like CONCAT('%',#{_parameter},'%') 
            </if>
        </where>
        order by id desc
    </select>
     <select id="findBrokerListByFactoryid" resultMap="BaseResultMap" >
        select * from brokerinfo
        <where>
            <if test="factoryid != null and factoryid != ''">
               and `factoryid`= #{factoryid}
            </if>
        </where>
        order by id desc
    </select>
    
</mapper>